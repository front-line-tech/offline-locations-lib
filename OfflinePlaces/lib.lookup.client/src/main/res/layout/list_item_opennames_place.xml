<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/place_icon"
                android:src="@drawable/ic_place_black_24dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginEnd="5dp"
                />

            <TextView
                android:id="@+id/text_place_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TYPE"
                android:textSize="10sp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                />

            <TextView
                android:id="@+id/text_place_primary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/text_place_type"
                android:layout_toEndOf="@id/place_icon"
                android:layout_alignParentTop="true"
                android:text="place name"
                />

            <TextView
                android:id="@+id/text_place_secondary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_place_primary"
                android:layout_toEndOf="@id/place_icon"
                android:text="secondary item"
                android:textSize="10sp"
                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</FrameLayout>