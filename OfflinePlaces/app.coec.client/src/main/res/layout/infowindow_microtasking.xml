<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/card_inner_padding">

    <RelativeLayout
        android:id="@+id/layout_stars"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimaryDark"
        android:padding="@dimen/card_inner_padding">

        <ImageView
            android:id="@+id/image_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tint="#ffffff"
            android:src="@drawable/ic_stars_black_24dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            />

        <TextView
            android:id="@+id/text_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/image_star"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/card_inner_padding"
            android:text="10"
            android:textColor="#ffffff"
            />

    </RelativeLayout>

    <TextView
        android:id="@+id/info_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@id/layout_stars"
        android:text="(title)"
        android:textSize="18sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/info_source"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/info_title"
        android:text="(source)"
        android:textColor="#888888"
        android:textSize="12sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/info_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/info_source"
        android:layout_marginTop="10dp"
        android:text="(description)"
        />

    <TextView
        android:id="@+id/info_label_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/info_description"
        android:layout_alignParentStart="true"
        android:textSize="12sp"
        android:text="From:"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/info_label_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/info_label_from"
        android:layout_alignParentStart="true"
        android:textSize="12sp"
        android:text="To:"
        />

    <com.github.curioustechizen.ago.RelativeTimeTextView
        android:id="@+id/info_timestamp_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/info_label_from"
        android:layout_alignTop="@id/info_label_from"
        android:textSize="12sp"
        android:layout_marginStart="7dp"
        />

    <com.github.curioustechizen.ago.RelativeTimeTextView
        android:id="@+id/info_timestamp_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/info_label_to"
        android:layout_alignTop="@id/info_label_to"
        android:textSize="12sp"
        android:layout_marginStart="7dp"
        />

</RelativeLayout>